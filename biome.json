{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSameLine": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"bracketSpacing": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"recommended": true,
				"noAccumulatingSpread": "error",
				"noDelete": "error"
			},
			"complexity": {
				"noUselessCatch": "error",
				"noForEach": "error"
			},
			"style": {
				"noVar": "error"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noAutofocus": "off"
			},
			"suspicious": {
				"useIsArray": "error"
			}
		}
	}
}
